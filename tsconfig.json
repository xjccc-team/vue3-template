{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "allowJs": true,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": ["*.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
